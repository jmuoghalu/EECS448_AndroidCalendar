<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eecs448_first_team.calender_app.WeekView">

    <TextView
        android:id="@+id/year"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="" />
    <TextView
        android:id="@+id/sunday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />
    <TextView
        android:id="@+id/monday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />
    <TextView
        android:id="@+id/tuesday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />
    <TextView
        android:id="@+id/wednesday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />
    <TextView
        android:id="@+id/thursday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />
    <TextView
        android:id="@+id/friday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />
    <TextView
        android:id="@+id/saturday"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_below="@id/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="Add Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addDetailsButton4"
            android:layout_weight="1" />

        <Button
            android:id="@+id/monthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"/>
        <Button
            android:id="@+id/yearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"/>

    </LinearLayout>


</RelativeLayout>
