<?xml version="1.0" encoding="utf-8"?>

<!--Edited by James Muoghalu-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eecs448_first_team.calender_app.AddDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textSize="28sp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/add"
                android:textSize="32sp"
                android:text=""/>

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add your detail here..."
                android:layout_marginTop="12dp"
                android:layout_below="@+id/date"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Start Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="-"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateMonthMinus" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateMonthText"
                        android:layout_weight="1" />

                    <Button
                        android:text="+"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateMonthPlus" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="-"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateDayMinus" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateDayText"
                        android:layout_weight="1" />

                    <Button
                        android:text="+"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateDayPlus" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="-"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateHourMinus" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateHourText"
                        android:layout_weight="1" />

                    <Button
                        android:text="+"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateHourPlus" />
                </LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:id="@+id/gap2"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Set Recurring:"
                    android:id="@+id/gap3"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:id="@+id/none"
                            android:checked="true" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly"
                            android:id="@+id/weekly"
                        />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biweekly"
                            android:id="@+id/biweekly"
                        />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:id="@+id/monthly"
                        />


                    </RadioGroup>

                </LinearLayout>


                <!--
                        android:visibility="gone"
                -->
                <!--Add the above line to all of the check boxes-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Sun"
                        android:id="@+id/check1"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Mon"
                        android:id="@+id/check2"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Tues"
                        android:id="@+id/check3"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Wed"
                        android:id="@+id/check4"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Thurs"
                        android:id="@+id/check5"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Fri"
                        android:id="@+id/check6"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Sat"
                        android:id="@+id/check7"/>


                </LinearLayout>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/gap1"/>

                <TextView
                    android:text="End Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="-"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateMonthMinus" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateMonthText"
                        android:layout_weight="1" />

                    <Button
                        android:text="+"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateMonthPlus" />
                </LinearLayout>





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="-"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateDayMinus" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateDayText"
                        android:layout_weight="1" />

                    <Button
                        android:text="+"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateDayPlus" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="-"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateHourMinus" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateHourText"
                        android:layout_weight="1" />

                    <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateHourPlus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="67dp">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Done"
                    android:layout_alignBaseline="@+id/cancelButton"
                    android:layout_alignBottom="@+id/cancelButton"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- start date will always be today's date-->


</RelativeLayout>
